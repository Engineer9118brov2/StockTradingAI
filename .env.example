# Stock Trading AI - Environment Configuration
# Copy this file to .env and fill in your API keys

# Polygon API (for historical data)
POLYGON_API_KEY=your_polygon_api_key_here

# Alpaca Trading API (for live/paper trading)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Trading Mode
# Set to true for paper trading, false for live (use with extreme caution!)
ALPACA_PAPER_TRADING=true

# Trading Preferences
TRADE_RISK_PERCENT=0.01
TRADE_SIZE_SHARES=10
DAILY_LOSS_LIMIT=-0.02
